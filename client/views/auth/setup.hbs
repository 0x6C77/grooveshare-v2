<div class="container">
    <div class="auth-nav">
        <a href='/auth/logout'>&lt; cancel</a>
    </div>
    <div class="auth-local">
        <div class="auth-setup active">
            {{#if message}}
                <div class="message message--error">
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                    <div>{{ message }}</div>
                </div>
            {{/if}}

            <form action="/auth" method="post">
                <p>We just need a few more details to setup your account.</p>
                <div class="input">
                    <label for="username">Choose a username</label>
                    <input type="text" name="username" id="username" placeholder="Username" value="{{newUser.username}}">
                </div>
                <div class="input">
                    <label for="email">Email</label>
                    <input type="text" name="email" id="email" placeholder="Email" value="{{newUser.email}}">
                </div>

                <div class="row-fluid">
                    <div class="offset6 col6">
                        <button type="submit" class="btn">Create account</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
